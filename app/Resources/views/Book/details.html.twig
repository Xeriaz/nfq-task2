{% extends 'base.html.twig' %}

{% block body %}
    <a class="btn btn-info" href="/">Back To Books</a>
    <hr>
    <div class="row">
        <div class="col-md-3">
            <img src="{{ book.coverImage }}" class="img-thumbnail" alt="book cover">
        </div>

        <div class="col-md-9">
            <h2 class="page-header">{{ book.title }}</h2>
            <ul class="list-group">
                <li class="list-group-item">Publish Date: {{book.publishDate|date('Y-m-d')}}</li>
                <li class="list-group-item">Author: {{book.author}}</li>
                {#<li class="list-group-item">Genre: {{book.genre}}</li>#}


                {# FIXME Hack for books without genres#}
                {% if (book.genre != null) %}
                    <li class="list-group-item">Genre: {{book.genre.genre}}</li>
                {% endif %}
            </ul>
        </div>
    </div>
{% endblock %}